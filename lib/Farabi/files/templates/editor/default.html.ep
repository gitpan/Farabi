<!DOCTYPE html>
<html>
<head>
<title>Farabi: Modern Perl Editor</title>

<!-- The jQuery -->
<script src="../js/jquery.js"></script>

<!-- Bootstrap -->
<link href="assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<script src="assets/bootstrap/js/bootstrap.min.js"></script>

<!-- Farabi -->
<link rel="stylesheet" href="farabi.css" type="text/css" />
<script src="farabi.js"></script>

<!-- CodeMirror editor -->
<link rel="stylesheet" href="assets/codemirror/codemirror.css"
	type="text/css" />
<link rel="stylesheet" href="assets/codemirror/dialog.css" />
<link rel="stylesheet" href="assets/codemirror/theme/neat.css" />
<link rel="stylesheet" href="assets/codemirror/theme/elegant.css" />
<link rel="stylesheet" href="assets/codemirror/theme/erlang-dark.css" />
<link rel="stylesheet" href="assets/codemirror/theme/night.css" />
<link rel="stylesheet" href="assets/codemirror/theme/monokai.css" />
<link rel="stylesheet" href="assets/codemirror/theme/cobalt.css" />
<link rel="stylesheet" href="assets/codemirror/theme/eclipse.css" />
<link rel="stylesheet" href="assets/codemirror/theme/rubyblue.css" />
<link rel="stylesheet" href="assets/codemirror/theme/lesser-dark.css" />
<link rel="stylesheet" href="assets/codemirror/theme/xq-dark.css" />
<link rel="stylesheet" href="assets/codemirror/theme/blackboard.css" />
<link rel="stylesheet" href="assets/codemirror/theme/vibrant-ink.css" />
<script src="assets/codemirror/codemirror.js"></script>
<script src="assets/codemirror/util/loadmode.js"></script>
<script src="assets/codemirror/util/searchcursor.js"></script>
<script src="assets/codemirror/util/match-highlighter.js"></script>
<script src="assets/codemirror/util/search.js"></script>
<script src="assets/codemirror/util/dialog.js"></script>

<!-- Humane.js -->
<link rel="stylesheet" href="assets/humane/libnotify.css" />
<script src="assets/humane/humane.min.js"></script>

</head>
<body>
	<div class="container">
		<div class="row">
			<div class="span12 farabi-centered">
				<h1>Farabi, a Modern Perl editor v<%= $Farabi::VERSION %></h1>
			</div>
		</div>
		<div class="row farabi-quote-of-the-day">
			<div class="span12 farabi-centered">
				<blockquote>
					<p>An art, which has an aim to achieve the beauty, is called a
						philosophy or in the absolute sense it is named wisdom.</p>
					<small><a target="_blank"
						href="http://en.wikipedia.org/wiki/Al-Farabi">Al-Farabi</a></small>
				</blockquote>
			</div>
		</div>
		<div class="row form-inline">
			<div class="pull-right">
				<div class="input-append">
					<input type="text" class="span3 topic" data-provide="typeahead"
						data-items="4">
					<button class="btn" type="button">Search</button>
				</div>
				<div class="btn-group">
					<a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
						Local Help <span class="caret"></span>
					</a>
					<ul class="dropdown-menu">
						<li><a href="#">Local Help</a></li>
						<li><a href="#">MetaCPAN.org</a></li>
						<li><a href="#">CPAN Search</a></li>
					</ul>
				</div>
			</div>
		</div>
		<div class="row">
			<%= include "editor/menu" %>
			<table class="span9 table-bordered">
				<tbody>
					<tr>
						<td><textarea id="editor" name="editor" class="editor"><%= include "editor/sample_script" %></textarea>
						</td>
					</tr>
					<tr>
						<td>
							<div id="editor_stats" class="pull-right"></div>
							</div>
						</td>
					</tr>
					<tr>
						<td>
							<ul id="outputTab" class="nav nav-tabs">
								<li class=""><a href="#output-tab" data-toggle="tab">Output</a></li>
								<li class=""><a href="#log-tab" data-toggle="tab">Log</a></li>
								<li class="active"><a href="#pod-tab" data-toggle="tab">POD</a></li>
							</ul>
							<div id="outputTabContent" class="tab-content">
								<div class="tab-pane fade" id="output-tab">
									<textarea id="output" readonly="true" cols="70" rows="5"></textarea>
								</div>
								<div class="tab-pane fade" id="log-tab">
									<textarea id="log" readonly="true" cols="70" rows="5"></textarea>
								</div>
								<div class="tab-pane fade active in" id="pod-tab">
								</div>
							</div>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>

	<!-- Help results dialog -->
	<div class="modal" id="help_results_dialog" tabindex="-1" role="dialog"
		aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal"
				aria-hidden="true"></button>
			<h3 id="myModalLabel">Search Perl Documentation</h3>
		</div>
		<div class="modal-body">
			<select class="results">
			</select>
			<div class="preview"></div>
		</div>
		<div class="modal-footer">
			<button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
		</div>
	</div>

	<!-- Perl::Critic violations dialog -->
	<div class="modal" id="perl_critic_dialog" tabindex="-1" role="dialog"
		aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal"
				aria-hidden="true"></button>
			<h3 id="myModalLabel">Perl::Critic violations</h3>
		</div>
		<div class="modal-body">
		</div>
		<div class="modal-footer">
			<button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
		</div>
	</div>

	<!-- About dialog -->
	<div class="modal" id="about_dialog" tabindex="-1" role="dialog"
		aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal"
				aria-hidden="true"></button>
			<h3 id="myModalLabel">About Farabi</h3>
		</div>
		<div class="modal-body"></div>
		<div class="modal-footer">
			<button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
		</div>
	</div>

	<!-- Help dialog -->
	<div class="modal" id="help_dialog" tabindex="-1" role="dialog"
		aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal"
				aria-hidden="true"></button>
			<h3 id="myModalLabel">Getting Started</h3>
		</div>
		<div class="modal-body">
			<dl>
				<dt>F1</dt>
				<dd>Context-sensitive help</dd>
				<dt>Ctrl-F</dt>
				<dd>Start searching</dd>
				<dt>Ctrl-G</dt>
				<dd>Find next</dd>
				<dt>Shift-Ctrl-G</dt>
				<dd>Find previous</dd>
				<dt>Shift-Ctrl-F</dt>
				<dd>Replace</dd>
				<dt>Shift-Ctrl-R</dt>
				<dd>Replace all</dd>
			</dl>
		</div>
		<div class="modal-footer">
			<button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
		</div>
	</div>

</body>
</html>