<!DOCTYPE html>
<html>
	<head>
		<title>Farabi - Modern Perl Editor</title>
		<!-- CodeMirror CSS -->
		<link rel="stylesheet" href="assets/codemirror/codemirror.css" type="text/css" />
		<link rel="stylesheet" href="assets/codemirror/dialog.css" />
		<link rel="stylesheet" href="assets/codemirror/theme/neat.css" />
		<link rel="stylesheet" href="assets/codemirror/theme/elegant.css" />
		<link rel="stylesheet" href="assets/codemirror/theme/erlang-dark.css" />
		<link rel="stylesheet" href="assets/codemirror/theme/night.css" />
		<link rel="stylesheet" href="assets/codemirror/theme/monokai.css" />
		<link rel="stylesheet" href="assets/codemirror/theme/cobalt.css" />
		<link rel="stylesheet" href="assets/codemirror/theme/eclipse.css" />
		<link rel="stylesheet" href="assets/codemirror/theme/rubyblue.css" />
		<link rel="stylesheet" href="assets/codemirror/theme/lesser-dark.css" />
		<link rel="stylesheet" href="assets/codemirror/theme/xq-dark.css" />
		<link rel="stylesheet" href="assets/codemirror/theme/blackboard.css" />
		<link rel="stylesheet" href="assets/codemirror/theme/vibrant-ink.css" />
		<!-- Humane.js CSS -->
		<link rel="stylesheet" href="assets/humane/libnotify.css" />
		<!-- Bootstrap -->
		<link href="assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
		<!-- Farabi CSS -->
		<link rel="stylesheet" href="farabi.css" type="text/css" />
		<!-- The jQuery -->
		<script src="../js/jquery.js"></script>
		<!-- Bootstrap -->
		<script src="assets/bootstrap/js/bootstrap.min.js"></script>
		<!-- Farabi -->
		<script src="farabi.js"></script>
		<!-- CodeMirror editor -->
		<script src="assets/codemirror/codemirror.js"></script>
		<script src="assets/codemirror/util/loadmode.js"></script>
		<script src="assets/codemirror/util/searchcursor.js"></script>
		<script src="assets/codemirror/util/match-highlighter.js"></script>
		<script src="assets/codemirror/util/search.js"></script>
		<script src="assets/codemirror/util/dialog.js"></script>
		<!-- Humane.js CSS -->
		<script src="assets/humane/humane.min.js"></script>
		<!-- Farabi startup -->
		<script type="text/javascript">
			$(function() {
				StartFarabi("editor");
			});
		</script>
	</head>
	<body>
		<div class="container">
		<div class="row">
			<div class="span1"></div>
			<div class="span10">
				<h1>Farabi - Modern Web-based Perl Editor</h1>
			</div>
		</div>
		<div class="row">
			<div class="span12">
				<blockquote>
					<p>An art, which has an aim to achieve the beauty, is called a philosophy or in the absolute sense it is named wisdom.</p>
					<small>Al-Farabi</small>
				</blockquote>
			</div>
		</div>
		<div class="row">
				<div class="span3">
					<div class="accordion" id="accordion2">
						<div class="accordion-group">
							<div class="accordion-heading">
								<a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
								Actions
								</a>
							</div>
							<div id="collapseOne" class="accordion-body collapse in">
								<div class="accordion-inner">
									<p><a href="#" class="perl_tidy_button">Tidy Code</a></p>
									<p><a href="#" class="perl_critic_button">Critique Code</a></p>
									<p><a href="#" class="run_in_browser_button">Run in Browser</a></p>
								</div>
							</div>
						</div>
						<div class="accordion-group">
							<div class="accordion-heading">
								<a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseTwo">
								Options
								</a>
							</div>
							<div id="collapseTwo" class="accordion-body collapse">
								<div class="accordion-inner">
									<table>
										<tr>
											<td>Mode:</td>
											<td>
												%= include 'editor/mode_selector'
											</td>
										</tr>
										<tr>
											<td>Theme:</td>
											<td>
												%= include 'editor/theme_selector'
											</td>
										</tr>
									</table>
								</div>
							</div>
						</div>
						<div class="accordion-group">
							<div class="accordion-heading">
								<a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseThree">
								Help
								</a>
							</div>
							<div id="collapseThree" class="accordion-body collapse">
								<div class="accordion-inner">
									<dl>
										<dt>F1</dt>
										<dd>Help for selected text</dd>
										<dt>Ctrl-F</dt>
										<dd>Start searching</dd>
										<dt>Ctrl-G</dt>
										<dd>Find next</dd>
										<dt>Shift-Ctrl-G</dt>
										<dd>Find previous</dd>
										<dt>Shift-Ctrl-F</dt>
										<dd>Replace</dd>
										<dt>Shift-Ctrl-R</dt>
										<dd>Replace all</dd>
									</dl>
								</div>
							</div>
						</div>
					</div>
				</div>
				<table class="span9 table-bordered">
					<tbody>
						<tr>
							<td>
								<textarea id="editor" name="editor" class="editor">#!/usr/bin/env perl
use 5.010;
use strict;
use warnings;

say 'START';

my $fred = 'fred';

foreach ( 0 .. 7 ) {
my $line = $_;
last unless defined $line; # exit loop if $line is not defined
print "$_ : $line \n";
}

my %HoH = (
flintstones=>{
husband=>"fred",
pal=>"barney",
},
jetsons=>{
husband=>"george",
wife=>"jane",
"his boy"=>"elroy",  # Key quotes needed.
},
simpsons=>{husband=>"homer",wife=>"marge",kid=>"bart",},
);

say 'END';

1;
__END__</textarea>
							</td>
						</tr>
						<tr>
							<td>
							&nbsp;
							</td>
						</tr>
						<tr>
							<td>
								<ul id="myTab" class="nav nav-tabs">
									<li class="active"><a href="#output-tab" data-toggle="tab">Output</a></li>
									<li class=""><a href="#log-tab" data-toggle="tab">Log</a></li>
								</ul>
								<div id="myTabContent" class="tab-content">
									<div class="tab-pane fade active in" id="output-tab">
											<textarea id="output" readonly="true" cols="70" rows="5"></textarea>
									</div>
									<div class="tab-pane fade" id="log-tab">
											<textarea id="log-result" readonly="true" cols="70" rows="5"></textarea>
									</div>
								</div>	
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
		<div class="modal" id="help_search_dialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
			<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
			<h3 id="myModalLabel">Search Perl Documentation</h3>
			</div>
			<div class="modal-body">
				<div class="input-append">
					<input type="text" class="span3 topic" style="margin: 0 auto;" data-provide="typeahead" data-items="4" data-source='["$_","$$","$*", "perlsyn"]'>
					<button class="btn" type="button">Search</button>
				</div>
				<select class="results">
				</select>
				<div class="preview">
				</div>
			</div>
			<div class="modal-footer">
				<button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
			</div>
		</div>	
		<div class="modal" id="perl_critic_dialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
			<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
			<h3 id="myModalLabel">Perl::Critic results</h3>
			</div>
			<div class="modal-body">
				<div class="results">
				</div>
			</div>
			<div class="modal-footer">
				<button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
			</div>
		</div>	
		
	</body>
</html>